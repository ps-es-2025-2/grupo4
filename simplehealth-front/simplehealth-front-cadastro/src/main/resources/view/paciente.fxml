<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="br.com.simplehealth.cadastro.controller.PacienteController">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="Cadastro de Pacientes" 
                   style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label text="Gerencie os pacientes do sistema" 
                   style="-fx-font-size: 14px; -fx-text-fill: white;"/>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.4" orientation="HORIZONTAL">
            <!-- Tabela de Pacientes -->
            <VBox spacing="10" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                <Label text="Lista de Pacientes" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <!-- Campo de Busca -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtBusca" promptText="Buscar por nome, CPF, email ou telefone..." 
                               HBox.hgrow="ALWAYS" style="-fx-padding: 8;"/>
                    <Button text="Buscar" onAction="#handleBuscar" 
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                    <Button text="Limpar Filtro" onAction="#handleLimparFiltro" 
                            style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                </HBox>
                
                <TableView fx:id="tabelaPacientes" VBox.vgrow="ALWAYS" minHeight="400">
                    <columns>
                        <TableColumn fx:id="colunaId" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="colunaNome" text="Nome Completo" prefWidth="250"/>
                        <TableColumn fx:id="colunaDataNascimento" text="Data Nascimento" prefWidth="130"/>
                        <TableColumn fx:id="colunaCpf" text="CPF" prefWidth="130"/>
                        <TableColumn fx:id="colunaTelefone" text="Telefone" prefWidth="130"/>
                        <TableColumn fx:id="colunaEmail" text="Email" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Formulário -->
            <VBox spacing="15" style="-fx-padding: 15; -fx-background-color: #f5f5f5;">
                <Label text="Dados do Paciente" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>
                    
                    <Label text="Nome Completo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtNome" promptText="Digite o nome completo" 
                               GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
                    
                    <Label text="Data de Nascimento:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <DatePicker fx:id="dtDataNascimento" promptText="Selecione a data" 
                                GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    
                    <Label text="CPF:" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtCpf" promptText="000.000.000-00" 
                               GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                    
                    <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" 
                               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    
                    <Label text="Email:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtEmail" promptText="email@exemplo.com" 
                               GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
                    
                    <Label text="Convênio:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <ComboBox fx:id="cbConvenio" promptText="Selecione o convênio" 
                              GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
                </GridPane>
                
                <!-- Botões de Ação -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="btnCriar" text="Criar" onAction="#handleCriar" 
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
                    <Button fx:id="btnAlterar" text="Alterar" onAction="#handleAlterar"/>
                    <Button fx:id="btnDeletar" text="Deletar" onAction="#handleDeletar"/>
                </HBox>
                
                <!-- Botões de Confirmação -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btnConfirmar" text="Confirmar" onAction="#handleConfirmar"/>
                    <Button fx:id="btnCancelar" text="Cancelar" onAction="#handleCancelar"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
