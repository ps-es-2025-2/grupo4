<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="br.com.simplehealth.agendamento.controller.ProcedimentoController"
            prefHeight="650.0" prefWidth="1150.0">
    
    <top>
        <VBox style="-fx-background-color: #9C27B0; -fx-padding: 15;">
            <Label text="Gerenciamento de Procedimentos" textFill="WHITE">
                <font><Font name="System Bold" size="20.0"/></font>
            </Label>
            <Label text="Cadastro e gerenciamento de procedimentos médicos" textFill="WHITE">
                <font><Font size="12.0"/></font>
            </Label>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.4" orientation="HORIZONTAL">
            <VBox spacing="10" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                <Label text="Lista de Procedimentos" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <TableView fx:id="tableView" VBox.vgrow="ALWAYS" minHeight="400">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="colPacienteCpf" text="CPF Paciente" prefWidth="130"/>
                        <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="250"/>
                        <TableColumn fx:id="colDataHora" text="Data/Hora" prefWidth="150"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

            <ScrollPane fitToWidth="true">
                <VBox spacing="15" style="-fx-padding: 15;">
                    <Label text="Dados do Procedimento" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="140" prefWidth="140"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="120" prefWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="CPF Paciente:*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtPacienteCpf" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="CRM Médico:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtMedicoCrm" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                        <Label text="Sala/Equipamento:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtSalaEquipamento" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <Label text="Convênio:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtConvenioNome" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                        <Label text="Nível de Risco:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="cbNivelRisco" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity"/>
                        
                        <Label text="Modalidade:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="cbModalidade" GridPane.columnIndex="3" GridPane.rowIndex="2" maxWidth="Infinity"/>

                        <Label text="Data/Hora Início:*" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtDataHoraInicio" promptText="yyyy-MM-dd HH:mm" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        
                        <Label text="Data/Hora Fim:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtDataHoraFim" promptText="yyyy-MM-dd HH:mm" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

                        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <ComboBox fx:id="cbStatus" GridPane.columnIndex="1" GridPane.rowIndex="4" maxWidth="Infinity"/>
                        
                        <Label text="Usuário Criador:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                        <TextField fx:id="txtUsuarioCriador" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

                        <Label text="Descrição Procedimento:*" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <TextArea fx:id="txtDescricaoProcedimento" prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="3"/>

                        <Label text="Observações:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                        <TextArea fx:id="txtObservacoes" prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="3"/>
                    </GridPane>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="btnCriar" text="Criar" onAction="#handleCriar" prefWidth="100"/>
                        <Button fx:id="btnAlterar" text="Alterar" onAction="#handleAlterar" prefWidth="100"/>
                        <Button fx:id="btnDeletar" text="Deletar" onAction="#handleDeletar" prefWidth="100"/>
                    </HBox>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="btnConfirmar" text="Confirmar" onAction="#handleConfirmar" prefWidth="100"/>
                        <Button fx:id="btnCancelar" text="Cancelar" onAction="#handleCancelar" prefWidth="100"/>
                    </HBox>
                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
</BorderPane>
