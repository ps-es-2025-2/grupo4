<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.simplehealth.estoque.controller.MedicamentoController">
    
    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #FF9800; -fx-padding: 15;">
            <Label text="Gestão de Medicamentos" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Controle de medicamentos do estoque hospitalar" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </VBox>
    </top>
    
    <!-- Content -->
    <center>
        <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
            
            <!-- Tabela -->
            <VBox spacing="10" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Total de medicamentos: " style="-fx-font-weight: bold;"/>
                </HBox>
                
                <TableView fx:id="tableMedicamentos" VBox.vgrow="ALWAYS" minHeight="400">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                        <TableColumn fx:id="colNome" text="Nome" prefWidth="250"/>
                        <TableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="120"/>
                        <TableColumn fx:id="colPrescricao" text="Prescrição" prefWidth="120"/>
                        <TableColumn fx:id="colTarga" text="Tarja" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Formulário -->
            <ScrollPane fitToWidth="true">
                <VBox spacing="15" style="-fx-padding: 15;">
                    <Label text="Formulário de Medicamento" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #D32F2F;"/>
                    
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" prefWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                        
                        <!-- Row 0 -->
                        <Label text="Nome:*" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtNome" promptText="Nome do medicamento" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <!-- Row 1 -->
                        <Label text="Quantidade:*" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtQuantidade" promptText="Quantidade total" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <!-- Row 2 -->
                        <Label text="Prescrição:" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtPrescricao" promptText="Tipo de prescrição (1 ou vazio)" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <!-- Row 3 -->
                        <Label text="Tarja:" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtTarga" promptText="Tarja do medicamento (1 ou vazio)" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                    
                    <!-- Botões de Ação -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnCriar" text="Criar" onAction="#handleCriar" prefWidth="100"/>
                        <Button fx:id="btnAlterar" text="Alterar" onAction="#handleAlterar" prefWidth="100"/>
                        <Button fx:id="btnDeletar" text="Deletar" onAction="#handleDeletar" prefWidth="100"/>
                    </HBox>
                    
                    <!-- Botões de Confirmação -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnConfirmar" text="Confirmar" onAction="#handleConfirmar" prefWidth="100"/>
                        <Button fx:id="btnCancelar" text="Cancelar" onAction="#handleCancelar" prefWidth="100"/>
                    </HBox>
                    
                    <Label text="* Campos obrigatórios" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
</BorderPane>
