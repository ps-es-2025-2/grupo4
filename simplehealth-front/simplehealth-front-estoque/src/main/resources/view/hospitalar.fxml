<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.simplehealth.estoque.controller.HospitalarController">
    
    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #0288D1; -fx-padding: 15;">
            <Label text="Gestão de Hospitalares" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Controle de materiais hospitalares do estoque" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </VBox>
    </top>
    
    <!-- Content -->
    <center>
        <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
            
            <!-- Tabela -->
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Atualizar" onAction="#handleAtualizar" style="-fx-background-color: #0288D1; -fx-text-fill: white;"/>
                    <Label text="Total de hospitalares: " style="-fx-font-weight: bold;"/>
                </HBox>
                
                <TableView fx:id="tableHospitalares" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
                        <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                        <TableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="100"/>
                        <TableColumn fx:id="colDescartavel" text="Descartável" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Formulário -->
            <ScrollPane fitToWidth="true">
                <VBox spacing="15" style="-fx-padding: 15;">
                    <Label text="Formulário de Material Hospitalar" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0288D1;"/>
                    
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" prefWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                        
                        <Label text="Nome:*" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtNome" promptText="Nome do material hospitalar" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="Tipo:" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtTipo" promptText="Ex: Descartável, Reutilizável" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <Label text="Unidade Medida:" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtUnidadeMedida" promptText="Ex: unidade, caixa" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="Quantidade:*" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtQuantidade" promptText="Quantidade total" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        
                        <Label text="Lote:" GridPane.rowIndex="4"/>
                        <TextField fx:id="txtLote" promptText="Número do lote" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        
                        <Label text="NF:" GridPane.rowIndex="5"/>
                        <TextField fx:id="txtNf" promptText="Nota fiscal" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                        
                        <Label text="Uso:" GridPane.rowIndex="6"/>
                        <TextField fx:id="txtUso" promptText="Uso do material" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                        
                        <Label text="Descartável:" GridPane.rowIndex="7"/>
                        <CheckBox fx:id="chkDescartabilidade" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                        
                        <Label text="Descrição:" GridPane.rowIndex="8"/>
                        <TextArea fx:id="txtDescricao" promptText="Descrição detalhada" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                    </GridPane>
                    
                    <!-- Botões -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="Novo" onAction="#handleNovo" prefWidth="100" style="-fx-background-color: #388E3C; -fx-text-fill: white;"/>
                        <Button text="Salvar" onAction="#handleSalvar" prefWidth="100" style="-fx-background-color: #1976D2; -fx-text-fill: white;"/>
                        <Button text="Deletar" onAction="#handleDeletar" prefWidth="100" style="-fx-background-color: #D32F2F; -fx-text-fill: white;"/>
                    </HBox>
                    
                    <Label text="* Campos obrigatórios" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
</BorderPane>
