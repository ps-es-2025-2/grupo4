<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.simplehealth.estoque.controller.ItemController">
    
    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #455A64; -fx-padding: 15;">
            <Label text="Todos os Itens do Estoque" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Visualização consolidada de todos os itens" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </VBox>
    </top>
    
    <!-- Content -->
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <!-- Barra de busca -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Atualizar" onAction="#handleAtualizar" style="-fx-background-color: #455A64; -fx-text-fill: white;"/>
                <TextField fx:id="txtBusca" promptText="Buscar item..." prefWidth="300" HBox.hgrow="ALWAYS"/>
                <Button text="Buscar" onAction="#handleBuscar" style="-fx-background-color: #1976D2; -fx-text-fill: white;"/>
                <Label text="Total de itens: " style="-fx-font-weight: bold;"/>
            </HBox>
            
            <!-- Tabela -->
            <TableView fx:id="tableItens" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="250"/>
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="150"/>
                    <TableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="100"/>
                    <TableColumn fx:id="colValidade" text="Validade" prefWidth="150"/>
                    <TableColumn fx:id="colLote" text="Lote" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
