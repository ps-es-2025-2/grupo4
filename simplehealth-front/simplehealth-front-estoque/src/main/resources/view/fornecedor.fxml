<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.simplehealth.estoque.controller.FornecedorController">
    
    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #FF9800; -fx-padding: 15;">
            <Label text="Gestão de Fornecedores" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Controle de fornecedores" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </VBox>
    </top>
    
    <!-- Content -->
    <center>
        <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
            
            <!-- Tabela -->
            <VBox spacing="10" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Atualizar" onAction="#handleAtualizar" style="-fx-background-color: #F57C00; -fx-text-fill: white;"/>
                    <Label text="Total de fornecedores: " style="-fx-font-weight: bold;"/>
                </HBox>
                
                <TableView fx:id="tableFornecedores" VBox.vgrow="ALWAYS" minHeight="400">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="200"/>
                        <TableColumn fx:id="colCnpj" text="CNPJ" prefWidth="300"/>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Formulário -->
            <ScrollPane fitToWidth="true">
                <VBox spacing="15" style="-fx-padding: 15;">
                    <Label text="Formulário de Fornecedor" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #F57C00;"/>
                    
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" prefWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                        
                        <Label text="CNPJ:*" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtCnpj" promptText="00.000.000/0000-00" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    </GridPane>
                    
                    <!-- Botões de Ação -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnCriar" text="Criar" onAction="#handleCriar" prefWidth="100"/>
                        <Button fx:id="btnAlterar" text="Alterar" onAction="#handleAlterar" prefWidth="100"/>
                        <Button fx:id="btnDeletar" text="Deletar" onAction="#handleDeletar" prefWidth="100"/>
                    </HBox>
                    
                    <!-- Botões de Confirmação -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnConfirmar" text="Confirmar" onAction="#handleConfirmar" prefWidth="100"/>
                        <Button fx:id="btnCancelar" text="Cancelar" onAction="#handleCancelar" prefWidth="100"/>
                    </HBox>
                    
                    <Label text="* Campos obrigatórios" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
</BorderPane>
