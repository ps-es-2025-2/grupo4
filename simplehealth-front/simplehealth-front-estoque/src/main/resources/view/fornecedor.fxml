<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.simplehealth.estoque.controller.FornecedorController">
    
    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #FF9800; -fx-padding: 15;">
            <Label text="Gestão de Fornecedores" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Controle de fornecedores" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </VBox>
    </top>
    
    <!-- Content -->
    <center>
        <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
            
            <!-- Tabela -->
            <VBox spacing="10" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Buscar:" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtBuscarNome" promptText="Digite o nome do fornecedor..." prefWidth="300"/>
                    <Button fx:id="btnBuscar" text="Buscar" onAction="#handleBuscar" prefWidth="100"/>
                    <Button fx:id="btnLimparBusca" text="Limpar" onAction="#handleLimparBusca" prefWidth="100"/>
                </HBox>
                
                <TableView fx:id="tableFornecedores" VBox.vgrow="ALWAYS" minHeight="400">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="150"/>
                        <TableColumn fx:id="colCnpj" text="CNPJ" prefWidth="150"/>
                        <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
                        <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="120"/>
                        <TableColumn fx:id="colEmail" text="E-mail" prefWidth="180"/>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Formulário -->
            <ScrollPane fitToWidth="true">
                <VBox spacing="15" style="-fx-padding: 15;">
                    <Label text="Formulário de Fornecedor" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #F57C00;"/>
                    
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" prefWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                        
                        <Label text="CNPJ:*" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtCnpj" promptText="00.000.000/0000-00" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="Nome:*" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtNome" promptText="Nome do fornecedor" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <Label text="Telefone:" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="E-mail:" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtEmail" promptText="email@exemplo.com" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        
                        <Label text="Endereço:" GridPane.rowIndex="4"/>
                        <TextField fx:id="txtEndereco" promptText="Endereço completo" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </GridPane>
                    
                    <!-- Botões de Ação -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnCriar" text="Criar" onAction="#handleCriar" prefWidth="100"/>
                        <Button fx:id="btnAlterar" text="Alterar" onAction="#handleAlterar" prefWidth="100"/>
                        <Button fx:id="btnDeletar" text="Deletar" onAction="#handleDeletar" prefWidth="100"/>
                    </HBox>
                    
                    <!-- Botões de Confirmação -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnConfirmar" text="Confirmar" onAction="#handleConfirmar" prefWidth="100"/>
                        <Button fx:id="btnCancelar" text="Cancelar" onAction="#handleCancelar" prefWidth="100"/>
                    </HBox>
                    
                    <Label text="* Campos obrigatórios" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
</BorderPane>
